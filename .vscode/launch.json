{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/AdventOfCode.dll",
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "moduleLoad": false
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Launch (web - no browser)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/AdventOfCode.dll",
            "cwd": "${workspaceFolder}",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "moduleLoad": false
            },
            "console": "integratedTerminal"
        },
        {
            "type": "dotnetwatchattach",
            "request": "launch",
            "name": ".NET Watch Attach",
            "args": { // Args to pass to coreclr attach,
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "logging": {
                    "moduleLoad": false
                },
                "console": "integratedTerminal"
            },
            "task": "watch",
            "program": "AdventOfCode.exe" // for windows Or "AdventOfCode" for linux
        },
    ]
}